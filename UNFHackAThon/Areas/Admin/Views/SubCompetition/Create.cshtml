@model UNFHackAThon.Models.ViewModels.SubCompetitionAndCompetitionViewModel
@using UNFHackAThon.Extentions



@{
    ViewData["Title"] = "Create";
}


<br />
<h2 class="text-info">Create Sub Competition</h2>
<br />



<div class="border backgroundWhiteBorder">
    <div class="col-8 border-right">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SubCompetition.CompetitionId" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <select id="ddlCategoryList" asp-for="SubCompetition.CompetitionId" asp-items="Model.CompetitionList.ToSelectListItem(Model.SubCompetition.CompetitionId)" class="form-control"></select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SubCompetition.Name" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="SubCompetition.Name" class="form-control" />
                </div>
                <span asp-validation-for="SubCompetition.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-5 offset-3">
                    <partial name="_CreateAndBackToListButton" />
                </div>
            </div>
        </form>
    </div>
    <div class="col-3 offset-1">
        @if (Model.SubCompetitionList.Count() > 0)
        {
            <p> Existing Subcategories: </p>

            <div id="SubCategoryList">
                <ul class="list-group"></ul>
            </div>
        }
    </div>


   
</div>


