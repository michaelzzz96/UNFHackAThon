@model IEnumerable<SubCompetition>

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">
        <div class="col-md-10">
            <h2 class="text-info">Create Competition Type</h2>
        </div>
        <div class="col-sm-15">
            <a asp-action="Index" asp-controller="Competition" class="btn btn-danger"><i class="fas fa-plus"></i> &nbsp;Previous Page</a>
        </div>
        <div class="col-sm-10 text-right ">
            <partial name="_CreateButtonPartial" />
        </div>
        <div class="col-lg-20 text-right">
            <a asp-action="Index" asp-controller="CompetitionItem" class="btn btn-success"><i class="fas fa-plus"></i> &nbsp;Next Page</a>
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary" >
                    <th>
                        Competition Type
                    </th>
                    <th>
                       Competition Event
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Competition.Name)
                </td>
                <td>
                    <partial name="_TableButtonPartial" model="item.Id" />
                </td>
            </tr>
                }
            </table>
        }
        else
        {
            <p>No Sub Competition Exists</p>
        }
    </div>
</div>
