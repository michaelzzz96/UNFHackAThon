@model IEnumerable<CompetitionItem>

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="border backgroundWhite">
    <div class="row">

        <div class="col-6">
            <h2 class="text-info">Finalize Competition</h2>
        </div>
        <div class="col-10 text-sm-right">
            <a asp-action="Index" asp-controller="SubCompetition" class="btn btn-danger"><i class="fas fa-plus"></i> &nbsp;Previous Page</a>
        </div>
        <div class="col-20 text-right">
            <partial name="_CreateButtonPartial" />
        </div>

    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        Competition Name
                    </th>
                    <th>
                        Competition Event
                    </th>
                    <th>
                        Competition Type
                    </th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Competition.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.SubCompetition.Name)
                        </td>
                        <td>
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p>No Competition Item Exists</p>
        }
    </div>
</div>



